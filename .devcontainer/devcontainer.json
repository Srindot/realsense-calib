{
    "name": "Real Sense Camera Calib",
    "privileged": true,
    "remoteUser": "container_user",
    "build":{
        "dockerfile" : "Dockerfile",
        "context" : "."
    },
    "workspaceFolder": "/home/container_user/workspace",
    "workspaceMount": "type=bind,source=${localWorkspaceFolder},target=/home/container_user/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-python.python",
                "esbenp.prettier-vscode",
                "eamodio.gitlens",
                "ms-iot.vscode-ros",
                "ms-toolsai.jupyter",              
                "mechatroner.rainbow-csv",         
                "ms-azuretools.vscode-docker",     
                "twxs.cmake",                      
                "ms-vscode.cmake-tools",          
                "redhat.vscode-yaml",             
                "smilerobotics.urdf",             
                "betwo.b2-catkin-tools",          
                "zachflower.uncrustify",          
                "ms-python.vscode-pylance" 
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": ":0",
        "QT_QPA_PLATFORM": "xcb",
        "NVIDIA_DRIVER_CAPABILITIES": "all",
        "NVIDIA_VISIBLE_DEVICES": "all"
    },
    "runArgs": [
        "--gpus=all", 
        "--privileged",
        "-e", "DISPLAY=${localEnv:DISPLAY}",
        "-e", "QT_QPA_PLATFORM=xcb",
        "--volume=/tmp/.X11-unix:/tmp/.X11-unix"
    ],
    "initializeCommand": "xhost +local:docker",

    "postCreateCommand": "sudo /home/container_user/catkin_ws/src/librealsense/scripts/setup_udev_rules.sh && sudo /home/container_user/catkin_ws/src/librealsense/scripts/patch-realsense-ubuntu-lts-hwe.sh",

    "features": {},
    "mounts": [
        {
            "type": "bind",
            "source": "/home/${localEnv:USER}/.vscode",
            "target": "/home/remoteUser.vscode"
        }
    ]
}
